# Production Environment Variables
# Copy these to a .env file in the wwebjs-bot directory on your VPS

# Database Configuration (PostgreSQL for production)
DATABASE_URL=postgresql://user:password@host:port/database
# Example: postgresql://postgres:yourpassword@localhost:5432/deliverybot_prod

# API Configuration
API_PORT=3001
NODE_ENV=production

# JWT Secret (CRITICAL - Change this to a strong random string)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars

# CORS Configuration (Frontend URLs allowed to access the API)
ALLOWED_ORIGINS=https://app.livsight.com,https://saas-delivery-lemon.vercel.app

# Time Zone
TIME_ZONE=UTC
# Or use: TIME_ZONE=Africa/Douala

# WhatsApp Bot Configuration (optional)
# GROUP_ID=your-whatsapp-group-id
REPORT_TIME=20:00
REPORT_ENABLED=false
SEND_CONFIRMATIONS=false

# WhatsApp Session Path (optional - defaults to ./auth-dev)
# WHATSAPP_SESSION_PATH=./auth-prod






